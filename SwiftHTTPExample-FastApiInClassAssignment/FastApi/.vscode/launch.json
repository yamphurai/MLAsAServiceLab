{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI (Attach)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",  
                "port": 8000            
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",  
                    "remoteRoot": "/path/to/remote/project"  
                }
            ],
            "justMyCode": true
        }
    ]
}